{
  "name": "needport-platform",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "kill-port 3000 3001 && next dev -p 3000",
    "guard:no-v2": "node scripts/check-no-v2-links.js",
    "prebuild": "npm run guard:no-v2",
    "build": "SKIP_TYPE_CHECK=true next build --no-lint",
    "start": "cross-env PORT=3000 next start -p 3000",
    "lint": "next lint",
    "precommit": "node scripts/no-emoji.js",
    "typecheck": "tsc --noEmit",
    "e2e:install": "npx playwright install",
    "e2e": "playwright test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "monitor": "playwright test --config=playwright.monitoring.config.ts",
    "monitor:prod": "BASE_URL=https://needport.jp playwright test --config=playwright.monitoring.config.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "seed": "tsx scripts/seed.ts",
    "seed:scale": "tsx scripts/seed.ts",
    "smoke:scale": "echo 'Run SMOKE-SCALE.md checklist manually'",
    "db:seed": "supabase db reset --prompt=false && supabase db execute supabase/seed.sql",
    "notify:dispatch": "curl -s -X POST http://localhost:3000/api/admin/notifications/dispatch",
    "cron:close": "curl -s -X POST http://localhost:3000/api/admin/cron/close-expired",
    "build:analyze": "ANALYZE=true next build",
    "vercel-build": "next build",
    "postvercel-build": "node scripts/guard-next-manifests.mjs",
    "smoke:prod": "bash ./scripts/smoke-prod.sh",
    "smoke:ci": "bash ./scripts/smoke.sh ${BASE:-http://localhost:3000}",
    "routes:check": "node ./scripts/check-routes.js",
    "env:check": "node ./scripts/check-env.js",
    "secrets:check": "node ./scripts/check-secrets.js",
    "secrets:generate": "node ./scripts/check-secrets.js --generate",
    "lv1:check": "node ./scripts/lv1-completion-check.js",
    "lv1:report": "node ./scripts/lv1-completion-check.js && cat lv1-completion-report.md",
    "ci": "npm run secrets:check --ci && npm run build && npm run test && npm run test:e2e",
    "rls:check": "psql \"$DATABASE_URL\" -f scripts/sql/rls-needs-check.sql || echo 'Run this in Supabase SQL Editor if psql missing'",
    "db:apply:needs": "npx ts-node --transpile-only scripts/db/run-sql.ts supabase/sql/rebaseline_needs_minimal.sql",
    "db:smoke:need": "npx ts-node --transpile-only scripts/db/run-sql.ts supabase/sql/smoke_insert_need.template.sql --var USER_UUID=$USER_UUID",
    "db:rebaseline:needs": "npx ts-node --transpile-only scripts/db/rebaseline-needs.ts --user $USER_UUID",
    "test:prod:e2e": "CLERK_TEST_EMAIL=$CLERK_TEST_EMAIL CLERK_TEST_PASSWORD=$CLERK_TEST_PASSWORD npx playwright test tests/prod/e2e-needs-post.spec.ts",
    "monitor:prod:e2e": "node scripts/prod-e2e-monitor.js",
    "monitor:prod:full": "npm run monitor:prod && npm run monitor:prod:e2e",
    "cleanup:e2e": "npx tsx scripts/cleanup-e2e-drafts.ts --dry-run",
    "cleanup:e2e:live": "npx tsx scripts/cleanup-e2e-drafts.ts",
    "test:clerk:login": "node scripts/test-clerk-login.js",
    "check:clerk:config": "node scripts/check-clerk-config.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.6",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@remixicon/react": "^4.6.0",
    "@sentry/nextjs": "^10.6.0",
    "@stripe/stripe-js": "^2.4.0",
    "@supabase/supabase-js": "^2.45.3",
    "@types/archiver": "^6.0.3",
    "@types/pg": "^8.15.5",
    "@upstash/ratelimit": "^2.0.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/kv": "^1.0.1",
    "archiver": "^7.0.1",
    "browser-image-compression": "^2.0.2",
    "clsx": "^2.1.1",
    "ioredis": "^5.7.0",
    "line-bot-sdk": "^0.1.4",
    "lucide-react": "^0.539.0",
    "next": "14.2.5",
    "next-intl": "^3.5.4",
    "nodemailer": "^6.9.8",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "resend": "^3.1.0",
    "sharp": "^0.34.3",
    "sonner": "^2.0.7",
    "stripe": "^18.4.0",
    "svix": "^1.71.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.4",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/postcss": "^4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.10.6",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jsdom": "^27.0.0",
    "kill-port": "^2.0.1",
    "lighthouse": "^12.8.2",
    "lighthouse-ci": "^1.13.1",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vitest": "^1.1.3"
  },
  "overrides": {
    "@supabase/supabase-js": "^2.45.3",
    "@supabase/postgrest-js": "^1.15.0"
  }
}
