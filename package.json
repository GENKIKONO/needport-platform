{
  "name": "needport-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "kill-port 3000 3001 && next dev -p 3000",
    "build": "next build",
    "start": "cross-env PORT=3000 next start -p 3000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "e2e:install": "npx playwright install",
    "e2e": "playwright test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test": "vitest --run",
    "test:watch": "vitest",
    "seed": "tsx scripts/seed.ts",
    "seed:scale": "tsx scripts/seed.ts",
    "smoke:scale": "echo 'Run SMOKE-SCALE.md checklist manually'",
    "db:seed": "supabase db reset --prompt=false && supabase db execute supabase/seed.sql",
    "notify:dispatch": "curl -s -X POST http://localhost:3000/api/admin/notifications/dispatch",
    "cron:close": "curl -s -X POST http://localhost:3000/api/admin/cron/close-expired",
    "build:analyze": "ANALYZE=true next build",
    "preflight": "npm run typecheck && npm run lint && npm test",
    "smoke": "bash scripts/smoke.sh",
    "smoke:ci": "BASE=${BASE:-http://localhost:3000} CI=1 bash scripts/smoke.sh",
    "smoke:schedule": "ts-node scripts/smoke-schedule.ts",
    "vercel-build": "next build",
    "backup:db": "./scripts/backup-db.sh",
    "backup:storage": "echo 'Storage backup not implemented yet'",
    "backup:full": "npm run backup:db && npm run backup:storage",
    "backup:health": "echo 'Backup health check not implemented yet'",
    "backup:verify": "echo 'Backup verification not implemented yet'",
    "backup:test-recovery": "echo 'Recovery testing not implemented yet'"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.30.0",
    "@stripe/stripe-js": "^2.4.0",
    "@supabase/supabase-js": "^2.45.3",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "line-bot-sdk": "^0.1.4",
    "next": "15.0.4",
    "next-intl": "^3.5.4",
    "nodemailer": "^6.9.8",
    "react": "^18",
    "react-dom": "^18",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "resend": "^3.1.0",
    "sharp": "^0.34.3",
    "stripe": "^18.4.0",
    "svix": "^1.71.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.10.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "kill-port": "^2.0.1",
    "playwright": "^1.54.2",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vitest": "^1.1.3",
    "@axe-core/playwright": "^4.8.4"
  },
  "overrides": {
    "@supabase/supabase-js": "^2.45.3",
    "@supabase/postgrest-js": "^1.15.0"
  }
}
